{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "jsx": "react-native",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@assets/*": ["assets/*"],
      "@style/*": ["style/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@api/*": ["api/*"],
    },
  },
}
